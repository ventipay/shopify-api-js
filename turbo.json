{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "test:ci": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
