{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["@cloudflare/workers-types", "node", "jest"],
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "future/**/*.ts",
    "adapters/**/*.ts",
    "rest/**/*.ts",
    "runtime/**/*.ts",
  ],
  "exclude": [
    "**/*.test.ts", "**/test/*", "**/__tests__/*",
  ],
  "extends": "../../tsconfig.base.json",
}
